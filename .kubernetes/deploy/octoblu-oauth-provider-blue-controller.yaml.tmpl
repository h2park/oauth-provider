id: octoblu-oauth-provider-blue-controller
kind: ReplicationController
apiVersion: v1beta1
labels:
  name: octoblu-oauth-provider-blue
  version: "$SHORT_COMMIT"
desiredState:
  replicas: 2
  replicaSelector:
    name: octoblu-oauth-provider-blue
    version: "$SHORT_COMMIT"
  podTemplate:
    labels:
      name: octoblu-oauth-provider-blue
      app: octoblu-oauth-provider-blue
      version: "$SHORT_COMMIT"
    desiredState:
      manifest:
        version: v1beta1
        id: octoblu-oauth-provider-blue
        containers:
          - name: octoblu-oauth-provider-blue
            image: octoblu/octoblu-oauth-provider:$SHORT_COMMIT
            ports:
              - containerPort: 80
            env:
              - name: MESHBLU_UUID
                value: $MESHBLU_UUID
              - name: MESHBLU_TOKEN
                value: $MESHBLU_TOKEN
              - name: NODE_ENV
                value: "production"
